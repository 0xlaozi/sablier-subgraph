{
  "name": "@sablier/subgraph",
  "version": "1.0.0",
  "author": {
    "name": "Sablier",
    "email": "paul@sablier.app",
    "url": "https://sablier.app"
  },
  "bugs": {
    "url": "https://github.com/sablierhq/sablier-subgraph/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.15.0",
    "@graphprotocol/graph-ts": "^0.15.1"
  },
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sablierhq/sablier-subgraph.git"
  },
  "scripts": {
    "build": "graph build --debug",
    "codegen": "graph codegen --debug --output-dir src/types/",
    "create": "graph create sablierhq/sablier-kovan --node https://api.thegraph.com/deploy/",
    "create-local": "graph create sablierhq/sablier-kovan --node http://127.0.0.1:8020",
    "deploy": "graph deploy sablierhq/sablier-kovan --debug --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy-local": "graph deploy sablierhq/sablier-kovan --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "remove-local": "graph remove sablierhq/sablier-kovan --node http://localhost:8020/",
    "reset-local": "yarn codegen && yarn remove-local && yarn create-local && yarn deploy-local"
  }
}
